<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>controller.SearchScheduleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>book</servlet-name>
        <servlet-class>controller.BookingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>book</servlet-name>
        <url-pattern>/book</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bookings</servlet-name>
        <servlet-class>controller.BookingListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookings</servlet-name>
        <url-pattern>/bookings</url-pattern>
    </servlet-mapping>

    <!-- Authentication Servlets - Using @WebServlet annotations -->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- Payment Servlet - Using @WebServlet annotation -->
    <servlet>
        <servlet-name>payment</servlet-name>
        <servlet-class>controller.PaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>payment</servlet-name>
        <url-pattern>/payment</url-pattern>
    </servlet-mapping>

    <!-- Admin Management Servlet -->
    <servlet>
        <servlet-name>adminManage</servlet-name>
        <servlet-class>controller.AdminManagementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminManage</servlet-name>
        <url-pattern>/admin-manage</url-pattern>
    </servlet-mapping>

    <!-- Admin Booking Approval Servlet -->
    <servlet>
        <servlet-name>adminBookings</servlet-name>
        <servlet-class>controller.AdminBookingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminBookings</servlet-name>
        <url-pattern>/admin-bookings</url-pattern>
    </servlet-mapping>

    <!-- Contact Servlet -->
    <servlet>
        <servlet-name>contact</servlet-name>
        <servlet-class>controller.ContactServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>contact</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
